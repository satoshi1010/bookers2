<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span>Bookers</span>
        </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>
             <li>
               <%= link_to 'Home',"users#show" %>
             </li>
             <li>
               <%= link_to 'Users',"users#index" %>
             </li>
             <li>
                <%= link_to 'Books',"books#index" %>
             </li>
             <li>
               <%= link_to 'Log out', destroy_user_session_path, method: :delete  %>
             </li>

        <% else %>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <li>
               <%= link_to 'Home',"/",class: "fas fa-home nav-link nav-link text-light" %>
             </li>
             <li>
               <%= link_to 'About',"/home/about",class: "fas fa-link nav-link text-light" %>
             </li>
             <li>
               <%= link_to 'Sign up',"/users/sign_up",class: "fas fa-user-plus nav-link text-light" %>
             </li>
             <li>
               <%= link_to 'Log in',"/users/sign_in",class: "fas fa-sign-in-alt nav-link text-light" %>
             </li>
           </ul>
         </div>
         <% end %>
      </div>
    </nav>
    </header>
    <main>

    </main>
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: key) %>  <!--<div class="key"> value-->
      <% end %>
      <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
